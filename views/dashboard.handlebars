<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

{{#if posts.length}}
  <div id="post-list" class="col-md-6">
    <h3>My Posts:</h3>

      {{#each posts as |post|}}
      <div id="post-list"class="row mb-2">
        <div class="col-md-8">
          <h4><a id="postLink" href="/api/posts/{{post.id}}">{{post.title}}</a></h4>
          <p class="card-text border-bottom">Created  on {{format_date post.date_created}}</p>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
{{/if}}
  </div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a Post:</h3>


<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newPostForm">
    Add Post
</button>


  <div class="modal fade new-post-form" id="newPostForm" tabindex="-1" aria-labelledby="newPostFormLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content newPostForm">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New Post</h5>
        </div>
        <form>
          <div class="input-group mb-3">
            <span class="input-group-text" >Title</span>
            <input id="post-title" type="text" class="form-control"  aria-label="Post title" aria-describedby="basic-addon1">
          </div>
          <div class="input-group">
            <span class="input-group-text">Post Description</span>
            <textarea id="post-desc" class="form-control" aria-label="Post Description"></textarea>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  </div>
</div>

<script src="./js/dashboard.js"></script>
