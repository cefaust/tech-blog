<div id="postCard" class="card">
  <div class="card-body">
    <h2 id="postTitle" class="card-title border-bottom">{{title}}</h2>
    <p class="card-text border-bottom">Created by {{user.username}} on {{format_date date_created}}</p>
    <p class="card-text">{{post_description}}</p>
  </div>
</div>
<form  class="form">
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Comment</label>
    <textarea id="commentForm" class="form-control commentFormBackground" id="exampleFormControlTextarea1" rows="3"></textarea>
    <div class="d-grid gap-2">
      <button  class="btn btn-primary submitComment">Submit</button>
    </div>
  </div>
</form>

<div  id="postCard" class="card" >
  <h2 class="text-light">Comments</h2>
{{#if comment}}

  <div class="card-body">
    <div  class="card-title text-danger">{{text}}</div>
    <h6 class="card-subtitle mb-2">{{user.username}}, {{format_date comment.date_created}}</h6>
  </div>

{{/if}}
</div>



<script src="/js/comment.js"></script>

